<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--gradient background color-->
    <style name="AppThemeV2" parent="@style/AppTheme">
        <item name="android:background">@drawable/gradient_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="header">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">60dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogStyle" parent="@android:style/Theme.Material.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/colorLightGrey2</item>

    </style>

</resources>
